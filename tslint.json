{
    "extends": "tslint:all",
    "rules": {
        "max-line-length": {
            "options": [120]
        },
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "options": [
                "debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
        },
        "no-default-export": false,
        "trailing-comma": [true, { "multiline": "never", "singleline": "never" }],
        "indent": [true, "spaces", 4]
    },
    "jsRules": {
        "max-line-length": {
            "options": [120]
        }
    }
}
